{
	"id":"com.moimz.imodule.module.push",
	"icon":"fa-bell-o",
	"title":{
		"ko":"알림서비스"
	},
	"version":"3.0.0",
	"description":{
		"ko":"홈페이지 내 각종 알림기능과 관련된 전반적인 기능을 관리합니다."
	},
	"author":{
		"name":"Arzz",
		"email":"arzz@arzz.com"
	},
	"homepage":"https://www.imodule.kr",
	"versionChecker":"http://www.moimz.com/ko/api/moimz/getLatest",
	"dependencies":{
		"core":"3.0.0"
	},
	"language":"ko",
	"admin":true,
	"context":false,
	"global":true,
	"article":false,
	"databases":{
		"push_table":{
			"columns":{
				"midx":{
					"type":"int",
					"length":11
				},
				"module":{
					"type":"varchar",
					"length":20
				},
				"code":{
					"type":"varchar",
					"length":20
				},
				"fromcode":{
					"type":"varchar",
					"length":20
				},
				"content":{
					"type":"text"
				},
				"reg_date":{
					"type":"int",
					"length":11
				},
				"is_check":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_read":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				}
			},
			"indexes":{
				"midx,module,code,fromcode":"primary_key",
				"midx":"index"
			}
		}
	}
}